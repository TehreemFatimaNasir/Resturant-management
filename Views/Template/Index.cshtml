
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Hero Section -->
<section id="hero" class="hero section dark-background">
    
  
    

    <img src="/image/assets/img/hero-bg.jpg" alt="" data-aos="fade-in">

    <div class="container">
        <div class="row">
            <div class="col-lg-8 d-flex flex-column align-items-center align-items-lg-start">
                <h2 data-aos="fade-up" data-aos-delay="100">Welcome to <span>ARISTON</span></h2>
                <p data-aos="fade-up" data-aos-delay="200">Delivering great food for more than 18 years!</p>
                <div class="d-flex mt-4" data-aos="fade-up" data-aos-delay="300">
                    <a href="#menu" class="cta-btn">Our Menu</a>
                    <a href="#book-a-table" class="cta-btn">Book a Table</a>
                </div>
            </div>
        </div>
    </div>
</section>


   
    <style>
    #menu {
    background-color: black;
    color: white;
    }
    </style>
    @model WebApplication4.Models.Reservation

    <div id="book-a-table" class="booking-container">
        <div class="booking-form">
    
            <h1 class="booking-heading">Secure Your Spot</h1>
            
            <p class="booking-subheading">
                Don’t miss out! Guarantee your table at Ariston by reserving now.
                Elevate your dining experience with us – book your spot for an unforgettable time.
            </p>

            <form asp-action="BookTable" asp-controller="Template" method="post">
                <label for="customername">Name</label>
                <input asp-for="customername" class="form-control" placeholder="Your Name" required>

                <label for="reservationdate">Reservation Date</label>
                <input type="datetime-local" asp-for="reservationdate" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />

                <label for="tablenumber">Tablenumber</label>
                <input asp-for="tablenumber" type="tablenumber" class="form-control" placeholder="tablenumber" required>

                <label for="booked">Booked</label>
                <input asp-for="booked" type="number" class="form-control" placeholder="booked" required>

                

                <button type="submit" class="booking-btn">Book Now</button>
            </form>
        </div>

        <div class="arch-image">
            <img src="image/assets/img/Group-29.png" alt="Food Image">
        </div>
    </div>


    </div>

</div>


    </section>
   


        <div class="container" data-aos="fade-up" data-aos-delay="100">

            <div class="swiper init-swiper" data-speed="600" data-delay="5000" data-breakpoints="{ &quot;320&quot;: { &quot;slidesPerView&quot;: 1, &quot;spaceBetween&quot;: 40 }, &quot;1200&quot;: { &quot;slidesPerView&quot;: 3, &quot;spaceBetween&quot;: 40 } }">
                <script type="application/json" class="swiper-config">
                    {
                      "loop": true,
                      "speed": 600,
                      "autoplay": {
                        "delay": 5000
                      },
                      "slidesPerView": "auto",
                      "pagination": {
                        "el": ".swiper-pagination",
                        "type": "bullets",
                        "clickable": true
                      },
                      "breakpoints": {
                        "320": {
                          "slidesPerView": 1,
                          "spaceBetween": 40
                        },
                        "1200": {
                          "slidesPerView": 3,
                          "spaceBetween": 20
                        }
                      }
                    }
                </script>
              
    <!-- Gallery Section -->
            <section id="gallery" class="gallery section">

                <!-- Section Title -->
                <div class="container text-center">
                    <h2 class="gallery-title">Gallery</h2>
                    <p class="gallery-subtitle">
                        Embark on a gastronomic journey with our meticulously crafted dishes, where passion for flavor meets the finest ingredients, creating a dining experience that transcends the ordinary.
                    </p>
                    <div class="divider"></div>
                </div>

                <!-- Gallery Section -->
                <section id="gallery">
                    <div class="gallery-container">
                        <div class="gallery-item">
                            <img src="image/assets/img/gallery/gallery-5.jpg" alt="Gallery Image">
                        </div>
                        <div class="gallery-item">
                            <img src="image/assets/img/gallery/gallery-2.jpg" alt="Gallery Image">
                        </div>
                        <div class="gallery-item">
                            <img src="image/assets/img/gallery/gallery-3.jpg" alt="Gallery Image">
                        </div>
                        <div class="gallery-item">
                            <img src="image/assets/img/gallery/gallery-4.jpg" alt="Gallery Image">
                        </div>
                        <div class="gallery-item">
                            <img src="image/assets/img/gallery/gallery-6.jpg" alt="Gallery Image">
                        </div>
                        <div class="gallery-item">
                            <img src="image/assets/img/gallery/gallery-1.jpg" alt="Gallery Image">
                        </div>
                    </div>
                </section>


            <!-- Contact Section -->
            <section id="contact" style="background-color: black; color: #d4a373; padding: 50px 0;">
                <div class="container" style="text-align: center;">
                        <h2 style="color: #6F4E37; font-size: 2em;">Contact Us</h2>
                        <p> Visit us or get in touch for any inquiries.</p>
                </div>

                <div class="container" style="display: flex; align-items: center; justify-content: space-between; flex-wrap: wrap; margin-top: 30px;">
                    <!-- Google Map on the Left -->
                    <div style="flex: 1; min-width: 45%; margin-bottom: 20px;">
                        <iframe style="width: 100%; height: 400px; border: 0;"
                                src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d48389.78314118045!2d-74.006138!3d40.710059!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a22a3bda30d%3A0xb89d1fe6bc499443!2sDowntown%20Conference%20Center!5e0!3m2!1sen!2us!4v1676961268712!5m2!1sen!2us"
                                allowfullscreen loading="lazy">
                        </iframe>
                    </div>

                        <!-- Contact Info in One Column -->
                        <div style="flex: 1; min-width: 45%; padding: 20px; display: flex; flex-direction: column; align-items: flex-start;">

                            <!-- Location -->
                            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                                <i class="fas fa-map-marker-alt" style="font-size: 28px; color: #6F4E37; margin-right: 10px;"></i>
                                <div>
                                    <h3 style="color: #6F4E37; margin: 0; font-size: 1.5em;">Our Location</h3>
                                    <p style="margin: 5px 0 0 0; color: #6F4E37;">Plot 3B, Khayaban-e-Ittehad, DHA Phase 7, Seaview Karachi, Pakistan</p>
                                </div>
                            </div>

                            <!-- Opening Hours -->
                            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                                <i class="fas fa-clock" style="font-size: 28px; color: #6F4E37; margin-right: 10px;"></i>
                                <div>
                                    <h3 style="color: #6F4E37; margin: 0;">Opening Hours</h3>
                                    <p style="margin: 5px 0 0 0; color: #6F4E37;">12:00 PM – 12:00 AM</p>
                                </div>
                            </div>

                            <!-- Call Now -->
                            <div style="margin-bottom: 20px; display: flex; align-items: center;">
                                <i class="fas fa-phone-alt" style="font-size: 28px; color: #6F4E37; margin-right: 10px;"></i>
                                <div>
                                    <h3 style="color: #6F4E37; margin: 0;">Call Now</h3>
                                    <p style="margin: 5px 0 0 0; color: #6F4E37;">03114-ARISTON (274786)</p>
                                </div>
                            </div>

                            <!-- Book Your Table -->
                            <div style="display: flex; align-items: center;">
                                <i class="fas fa-calendar-alt" style="font-size: 28px; color: #6F4E37; margin-right: 10px;"></i>
                                <div>
                                    <h3 style="color: #6F4E37; margin: 0;">Book Your Table</h3>
                                    <p style="margin: 5px 0 0 0; color: #6F4E37;">Make a reservation now!</p>
                                </div>
                            </div>

                        </div>


            </section>

            <!-- FontAwesome Script -->
            <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/js/all.min.js"></script>





</main>

