@model IEnumerable<WebApplication4.Models.Order>

@{
    ViewData["Title"] = "Manage Orders";
}

<div class="container center-content">
    <h1>Manage Orders</h1>
    <p>
        <a asp-action="Create" class="btn btn-success">Create New Order</a>
    </p>
    <table class="table table-dark">
        <thead>
            <tr>
                <th>Customer Name</th>
                <th>Items</th>
                <th>Total Price</th>
                <th>Status</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.customername</td>
                    <td>@order.items</td>
                    <td>@order.totalprice</td>
                    <td>@order.status</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@order.id" class="btn btn-primary btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@order.id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .center-content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 70vh;
    }
</style>
