@model IEnumerable<WebApplication4.Models.Food>

@{
    ViewData["Title"] = "Order";
}
<div class="order-container">
    <h1>Order</h1>

    <div class="add-food-form">
        <h3>Add New Food</h3>
        <form method="post" asp-action="AddNewFood">
            <div class="mb-3">
                <label for="foodname" class="form-label">Food Name:</label>
                <input type="text" id="foodname" name="foodname" required />
            </div>

            <div class="mb-3">
                <label for="category" class="form-label">Category:</label>
                <input type="text" id="category" name="category" required />
            </div>

            <div class="mb-3">
                <label for="price" class="form-label">Price:</label>
                <input type="number" id="price" name="price" step="0.01" required />
            </div>

            <button type="submit">Add Food</button>
        </form>
    </div>
</div>
<style>
    body {
        background-color: #f8f3ec; /* Soft beige background */
        font-family: 'Poppins', sans-serif;
    }

    .order-container {
        max-width: 700px;
        margin: auto;
        padding: 40px;
    }

    h1 {
        text-align: center;
        color: #5C4033; /* Coffee Brown */
        font-weight: bold;
    }

    .add-food-form {
        background-color: #5C4033; /* Coffee Brown */
        padding: 20px;
        border-radius: 10px;
        color: white;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .add-food-form h3 {
            text-align: center;
            font-weight: bold;
        }

    .form-label {
        font-weight: 600;
    }

    input {
        width: 100%;
        padding: 10px;
        border-radius: 8px;
        border: 2px solid #5C4033;
    }

    button {
        width: 100%;
        padding: 10px;
        background-color: #5C4033; /* Coffee Brown */
        color: white;
        border: none;
        border-radius: 8px;
        font-weight: bold;
        cursor: pointer;
    }

        button:hover {
            background-color: #3e2c23;
        }
</style>



