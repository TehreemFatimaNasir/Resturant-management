@model WebApplication4.Models.Order

@{
    ViewData["Title"] = "Create";
}

<div class="main-content">
    <div class="form-container">
        <h2>Create New Order</h2>

        <form method="post" asp-action="Create">
            <div class="form-group">
                <label for="customername">Customer Name:</label>
                <input type="text" id="customername" asp-for="customername" required />
            </div>

            <div class="form-group">
                <label for="items">Items:</label>
                <textarea id="items" asp-for="items" required></textarea>
            </div>

            <div class="form-group">
                <label for="totalprice">Total Price:</label>
                <input type="number" id="totalprice" asp-for="totalprice" required />
            </div>

            <div class="form-group">
                <label for="status">Status:</label>
                <select id="status" asp-for="status">
                    <option value="pending">Pending</option>
                    <option value="completed">Completed</option>
                </select>
            </div>

            <button type="submit">Create Order</button>
        </form>

        <a href="/order/index" class="back-link">Back to List</a>
    </div>
</div>

<style>
    /* General Page Layout */
    body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        margin: 0;
    }

    .main-content {
        flex: 1;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 70vh; /* Ensures content is centered */
        padding: 80px 20px; /* Adjust space between header & footer */
    }

    /* Form Styling */
    .form-container {
        width: 90%;
        max-width: 400px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background-color: #f9f9f9;
        text-align: center;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
    }

    form {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .form-group {
        text-align: left;
    }

    label {
        font-weight: bold;
        font-size: 14px;
        color: #333;
        display: block;
        margin-bottom: 5px;
    }

    input, textarea, select {
        width: 100%;
        padding: 8px;
        border-radius: 5px;
        border: 1px solid #ccc;
        font-size: 14px;
    }

    textarea {
        resize: vertical;
        height: 60px;
    }

    /* Button Styling */
    button {
        padding: 10px;
        font-size: 14px;
        background-color: #28a745;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 10px;
        width: 100%;
    }

        button:hover {
            background-color: #218838;
        }

    /* Back Link */
    .back-link {
        display: block;
        margin-top: 15px;
        color: #007bff;
        text-decoration: none;
        font-size: 14px;
    }

        .back-link:hover {
            text-decoration: underline;
        }

</style>
